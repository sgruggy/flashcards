extends app

block card
    section.flashcards
        .card(class=`card-${side}`)
            .card-header
            h1.card-title= side
        
            #content
                h2= text
                if hint
                    if (side === 'question')
                        p.hint  
                            i= `Hint: ${hint}`
        
            .card-flip-wrap
                if (side === 'question')        
                    a(href='/cards/' + id + '?side=answer')
                        img.card-flip(src='/static/img/flip.svg')
        
                else
                    a(href='/cards/' + id + '?side=question')
                        img.card-flip(src='/static/img/flip.svg')
        
            .card-next
                a(href='/cards/' + nextId + '?side=question')
                    img(src='/static/img/next.svg')
        script(src='/static/js/app.js')